<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/card.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="stylesheets/hero_doom.css">
    <style>
        #navbar-b .navbar-brand {
            margin-right: 0;
        }

        #navbar-b .navbar-brand img {
            width: 80px;
        }

        @media screen and (min-width: 768px) {
            #navbar-b .navbar-brand img {
                width: 100px;
            }

            #navbar-b .container-fluid {
                flex-direction: column;
            }

            #navbar-b .navbar-nav .nav-item {
                padding: 0.5em 1em;
            }

            #navbar-b .navbar-nav {
                border-bottom: 2px solid #000000;
            }
        }

        #navbar-b .navbar-nav .nav-link {
            color: #000000;
            font-size: 1.1em;
        }

        #navbar-b .navbar-nav {
            border-top: 2px solid #000000;
            margin-top: 0.5em;
        }
    </style>
</head>

<%- include('../home/header') %>
    <%- include('../home/nav') %>

        <body>
            <h1 class="header" style="margin-left: 4%; margin-top: 2%;"><b>Highlights</b></h1>
            <section class="hero">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <%- include('../home/centerpage_component/top_slidebar.ejs') %>
                </div>
            </section>

            <article>
                <%- include('../home/centerpage_component/menu_button.ejs') %>
                    <section class="h-100  gradient-custom-2 py-3 d-flex justify-content-center align-items-center">
                        <div class="container-st h-100 ">
                            <div class="row d-flex justify-content-center align-items-center"
                                style="margin-top: -40px;">
                                <div class="row" id="cards_landscape_wrap-2">
                                    <div class="col-lg-12 my-2">
                                        <div class="row pt-3" style="margin-bottom: 2%;">
                                            <% Center.forEach((profile)=> { %>
                                                <div class="col-lg-3 col-md-6 mb-3">
                                                    <div class="card h-100"
                                                        style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); transition: 0.3s;">
                                                        <div class="top">
                                                            <% if (profile.card_picture) { %>
                                                                <% const imcard=profile.card_picture.substring(7) %>
                                                                    <a href="/details/<%= profile.news_id %>">
                                                                        <img class="card-img-top" src="<%= imcard %>"
                                                                            alt="">
                                                                        <% } %>
                                                                    </a>
                                                        </div>
                                                        <div class="card-body-commu">
                                                            <div class="icon-container">
                                                                <!-- ส่วนของปุ่มกดหัวใจ -->
                                                                <% const news_id=profile.news_id; %>
                                                                    <% const isLike=like.some(item=>
                                                                        item.like_news_id === news_id); %>
                                                                        <% if (isLike) { %>
                                                                            <a href="" style="color: #000000;">
                                                                                <i class="bi bi-heart-fill"
                                                                                    style="color: rgb(143, 1, 1);"
                                                                                    id="likeIcon"
                                                                                    data-news-id="<%= news_id %>"
                                                                                    onclick="removeLike(this)"></i></a>
                                                                            <% } else { %>
                                                                                <a href="" style="color: #000000;">
                                                                                    <i class="bi bi-heart" id="likeIcon"
                                                                                        data-news-id="<%= news_id %>"
                                                                                        onclick="addLike(this)"></i>
                                                                                </a>
                                                                                <% } %>

                                                                                    <!-- ส่วนของปุ่มคอมเม้น -->
                                                                                    <% if
                                                                                        (CommentCounts[profile.news_id]
                                                                                        !==undefined) { %>
                                                                                        <i class="bi bi-chat"></i>
                                                                                        <p 
                                                                                            style="font-size: 14px;margin-left:-5px;margin-top:6px">
                                                                                            <%= CommentCounts[profile.news_id]
                                                                                                %>
                                                                                        </p>
                                                                                        <% } else { %>
                                                                                            <i class="bi bi-chat"></i>
                                                                                            <% } %>

                                                                                                <!-- ปุ่มของส่วนกดแชร์ -->
                                                                                                <i class="bi bi-send"
                                                                                                    style="padding-top: 1px;"></i>
                                                                                                <!-- ส่วนของปุ่มกดบุคมาร์ค -->

                                                                                                <% const
                                                                                                    isBookmarked=bookmark_id.some(item=>
                                                                                                    item.b_news_id ===
                                                                                                    news_id); %>
                                                                                                    <% if (isBookmarked)
                                                                                                        { %>
                                                                                                        <i class="bi bi-bookmark-check-fill"
                                                                                                            id="bookmarkIcon"
                                                                                                            data-news-id="<%= news_id %>"
                                                                                                            onclick="removeBookmark(this)"></i>
                                                                                                        <% } else { %>
                                                                                                            <i class="bi bi-bookmark"
                                                                                                                id="bookmarkIcon"
                                                                                                                data-news-id="<%= news_id %>"
                                                                                                                onclick="addBookmark(this)"></i>
                                                                                                            <% } %>
                                                            </div>
                                                        </div>
                                                        <% if (likeCounts[profile.news_id] !==undefined) { %>
                                                            <div style="margin-top: -15px;margin-left:20px">
                                                                <p style="font-size: 13px;color:#1e1e1e;">
                                                                    จำนวนไลค์: <%= likeCounts[profile.news_id] %> ครั้ง
                                                                        
                                                                </p>
                                                            </div>
                                                            <% } else { %>
                                                                <div style="margin-top: -15px;margin-left:20px">
                                                                    <p style="font-size: 13px;color:#1e1e1e;">
                                                                        ยังไม่มีการกดไลค์
                                                                    </p>
                                                                </div>
                                                                <% } %>

                                                                    <script>
                                                                        async function addBookmark(icon) {
                                                                            const newsId = icon.getAttribute('data-news-id');

                                                                            try {
                                                                                const response = await fetch(`/bookmark/${newsId}`, {
                                                                                    method: 'POST'
                                                                                });

                                                                                const data = await response.json();

                                                                                if (data.success) {
                                                                                    bookmark_id.push({ b_news_id: newsId });
                                                                                    icon.classList.add('bi-bookmark-check-fill');
                                                                                    icon.classList.remove('bi-bookmark');
                                                                                } window.location.reload();

                                                                                console.log(data.message);
                                                                            } catch (error) {
                                                                                console.error('เกิดข้อผิดพลาด:', error);
                                                                            }
                                                                        }

                                                                        async function removeBookmark(icon) {
                                                                            const newsId = icon.getAttribute('data-news-id');

                                                                            try {
                                                                                const response = await fetch(`/bookmark/${newsId}`, {
                                                                                    method: 'DELETE'
                                                                                });
                                                                                const data = await response.json();
                                                                                if (data.success) {
                                                                                    const index = bookmark_id.findIndex(item => item.b_news_id === newsId);
                                                                                    if (index !== -1) {
                                                                                        bookmark_id.splice(index, 1);
                                                                                    }
                                                                                    icon.classList.add('bi-bookmark');
                                                                                    icon.classList.remove('bi-bookmark-check-fill');
                                                                                } window.location.reload();

                                                                                console.log(data.message);
                                                                            } catch (error) {
                                                                                console.error('เกิดข้อผิดพลาด:', error);
                                                                            }
                                                                        }
                                                                    </script>
                                                                    <script>
                                                                        async function addLike(icon) {
                                                                            const newsId = icon.getAttribute('data-news-id');

                                                                            try {
                                                                                const response = await fetch(`/like/${newsId}`, {
                                                                                    method: 'POST'
                                                                                });

                                                                                const data = await response.json();

                                                                                if (data.success) {
                                                                                    like_id.push({ like_news_id: newsId });
                                                                                    icon.classList.add('bi-bookmark-check-fill');
                                                                                    icon.classList.remove('bi-heart');
                                                                                } window.location.reload();

                                                                                console.log(data.message);
                                                                            } catch (error) {
                                                                                console.error('เกิดข้อผิดพลาด:', error);
                                                                            }
                                                                        }

                                                                        async function removeLike(icon) {
                                                                            const newsId = icon.getAttribute('data-news-id');

                                                                            try {
                                                                                const response = await fetch(`/like/${newsId}`, {
                                                                                    method: 'DELETE'
                                                                                });
                                                                                const data = await response.json();
                                                                                if (data.success) {
                                                                                    const index = like.findIndex(item => item.like_news_id === newsId);
                                                                                    if (index !== -1) {
                                                                                        like_id.splice(index, 1);
                                                                                    }
                                                                                    icon.classList.add('bi-heart');
                                                                                    icon.classList.remove('bi-heart-check-fill');
                                                                                } window.location.reload();

                                                                                console.log(data.message);
                                                                            } catch (error) {
                                                                                console.error('เกิดข้อผิดพลาด:', error);
                                                                            }
                                                                        }
                                                                    </script>
                                                                    <div class="card-body-profile" style="margin-top: -20px;">
                                                                        <h5 class="card-title ">
                                                                            <a href="/details/<%= profile.news_id %>"
                                                                                class="">
                                                                                <!-- title -->
                                                                                <b><%- profile.title %></b>
                                                                            </a>

                                                                        </h5>
                                                                        <p class="card-text " style="font-size: 16;">
                                                                            <!-- welding -->
                                                                            <%- profile.welding_para %>
                                                                        </p>
                                                                    </div>
                                                                    <div class="card-footer">
                                                                        <a style="font-size: 12px; color:#6e6e6e;">
                                                                            <p style="font-size: small; "><i
                                                                                    class="bi bi-calendar2-week fa-xl"
                                                                                    style="color: palevioletred; padding-right:5px"></i>
                                                                                <% if (profile.start) { %>
                                                                                    <% const start=profile.start%>
                                                                                        <% const newStart=new
                                                                                            Date(start); %>
                                                                                            <% newStart.setHours(newStart.getHours()+7);
                                                                                                %>
                                                                                                <% const
                                                                                                    formattedStart=new
                                                                                                    Date(newStart).toISOString().substring(0,10)%>
                                                                                                    <% const
                                                                                                        end=profile.end%>
                                                                                                        <% const
                                                                                                            newEnd=new
                                                                                                            Date(end);
                                                                                                            %>
                                                                                                            <% newEnd.setHours(newEnd.getHours()+7);
                                                                                                                %>
                                                                                                                <% const
                                                                                                                    formattedEnd=new
                                                                                                                    Date(newEnd).toISOString().substring(0,10)%>
                                                                                                                    <%= formattedStart
                                                                                                                        %>
                                                                                                                        -
                                                                                                                        <%= formattedEnd
                                                                                                                            %>
                                                                                                                            <% } else
                                                                                                                                {
                                                                                                                                %>
                                                                                                                                ไม่มีกำหนดการ
                                                                                                                                <% }
                                                                                                                                    %>

                                                                            </p>
                                                                            <!-- ชื่อ -->
                                                                            <!-- <i class="bi bi-person-circle fa-sm" style="padding-right: 5px;padding-left:10px;"></i>-->

                                                                            <% if (profile.profile_image) { %>
                                                                                <img id="profilePicture"
                                                                                    class="img-account-profile rounded-circle mb-2"
                                                                                    style="height: 30px; padding-right:5px;"
                                                                                    <% const
                                                                                    imagePath=profile.profile_image.substring(6);
                                                                                    %>
                                                                                src="<%= imagePath %>" alt="">
                                                                                    <% } else { %>
                                                                                        <img id="profilePicture"
                                                                                            class="img-account-profile rounded-circle mb-2"
                                                                                            style="height: 30px;padding-right:5px;"
                                                                                            src="http://bootdey.com/img/Content/avatar/avatar1.png"
                                                                                            alt="">
                                                                                        <% } %><%-profile.name %>
                                                                                                <!-- อีเมล -->
                                                                                                <i class="bi bi-envelope fa-lg"
                                                                                                    style="padding-right: 5px;padding-left:10px;"></i></i><%-profile.email
                                                                                                    %>
                                                                                                    <!-- วันที่ประกาศ -->
                                                                                                    <% const
                                                                                                        date=profile.time_stamp%>
                                                                                                        <% const
                                                                                                            newDate=new
                                                                                                            Date(date);
                                                                                                            %>
                                                                                                            <% newDate.setHours(newDate.getHours()+
                                                                                                                7); %>
                                                                                                                <% const
                                                                                                                    formattedDate=new
                                                                                                                    Date(newDate).toISOString().substring(0,
                                                                                                                    19).replace('T', ' '
                                                                                                                    )%>
                                                                                                                    <p>โพสเมื่อ
                                                                                                                        <%-formattedDate
                                                                                                                            %>
                                                                                                                    </p>
                                                                        </a>
                                                                    </div>
                                                    </div>
                                                </div>
                                                <% }); %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <%- include('../home/footer') %>
        </body>

</html>