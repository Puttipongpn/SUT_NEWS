    <div class="card mb-3 mt-2" style="max-width: auto;">
        <div class="row g-0">
            <div class="col-md-4">
                <img class="img-account-profile rounded-circle mb-2"
                    style="height: 150px; margin-left: 15%; margin-bottom: 3%; margin-top: 3%;"
                    src="http://bootdey.com/img/Content/avatar/avatar1.png" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <small>
                    <h5 class="card-title">
                        <%= newsData.user_name %>
                    </h5>
                    <p class="card-text"><i class="bi bi-person"></i>: <%= newsData.name %>
                    </p>
                    <p class="card-text"><i class="bi bi-envelope"></i>: <%= email%>
