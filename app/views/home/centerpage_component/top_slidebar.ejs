<div class="carousel-inner">
    <% top_slidebar.forEach((top_slidebar, index)=> { %>
        <% const imagePathFromDB=top_slidebar.card_picture.substring(6); %>
            <% const formattedImagePath=imagePathFromDB.replace(/\\/g, '/' ); %>
                <div class="carousel-item <% if (index === 0) { %>active<% } %>">
                    <div class="hero__items set-bg"
                        style="height: 650px; background-image: url('<%= formattedImagePath %>'); background-size: cover;">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="hero__text">
                                    <h2><%- top_slidebar.title %></h2>
                                    <p><%- top_slidebar.welding_para %></p>
                                    <a href="/details/<%= top_slidebar.news_id %>">
                                        <span>เพิ่มเติม</span><i class="fa fa-angle-right" style="font-size: 21px;"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
</div>

<ol class="carousel-indicators">
    <% for (let i=0; i < top_slidebar.length; i++) { %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" <% if (i===0) { %>class="active"<% } %>>
        </li>
        <% } %>
</ol>
<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
</a>

<style>
    .carousel-control-prev{
        width: 20px;
        z-index: 1;
        margin-left: 10px;
    }
    .carousel-control-next {
        width: 20px;
        z-index: 1;
        margin-right: 10px;
        /* เพิ่ม z-index ให้ปุ่มกด */
    }
</style>