            <!-- End -->

            <div class="container py-5">
                <div class="row">

                    <div class="col-sm-12" style="text-align: end; margin-bottom: 2%; margin-top: -3%;">
                        <a href="/addnews"><button class="btn btn-success"><i class="fa-solid fa-circle-plus fa-xl"
                                    style="color: #ffffff; "></i> Add New</button></a>
                    </div>
                    <div class="container px-2">
                        <div class="table-responsive">
                            <table id="example" class="table table-striped" style="width:100%">
                                <thead>
                                    <tr>
                                        <th data-field="No." style="width: 3%;">No.</th>
                                        <th data-field="Title" style="width: 15%;">Title</th>
                                        <th data-field="Welding" style="width: 25%;">Welding</th>
                                        <th data-field="Status" style="width: 7%;">Status</th>
                                        <th data-field="Date_Time" style="width: 8%;">Date Time</th>
                                        <th data-field="Comment" style="width: 12%;">Comment</th>
                                        <th data-field="Actions" style="width:10%;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% settingnews.forEach((settingnews,index)=> { %>
                                        <tr>
                                            <th scope="row" class="small-column">
                                                <%= index+1 %>
                                            </th>
                                            <td
                                                style="width: 15px; max-width: 15px; word-wrap: break-word; white-space: normal;">
                                                <%- settingnews.title %></td>
                                            <td
                                                style="width: 25px; max-width: 25px; word-wrap: break-word; white-space: normal;">
                                                <%- settingnews.welding_para %>
                                            </td>

                                            <td>
                                                <% if (settingnews.status_id===2) { %>
                                                    <i class="fa fa-check-circle-o green"></i> approve
                                                    <% } else if (settingnews.status_id===4) { %>
                                                        <i class="fa fa-dot-circle-o text-danger"></i> Disapproved
                                                        <% } else if (settingnews.status_id===3) { %>
                                                            <i class="fa fa-dot-circle-o " style="color: #ff5c33;"></i>
                                                            แก้ไข
                                                            <% } else if (settingnews.status_id===1) { %>
                                                                <i class="fa fa-dot-circle-o"
                                                                    style="color: #ffd500;"></i> รอการพิจารณา
                                                                <% } %>


                                            </td>
                                            <td
                                                style="width: 8px; max-width: 8px; word-wrap: break-word; white-space: normal;">
                                                <%- settingnews.formattedDate %></td>
                                            <td
                                                style="width: 12px; max-width: 12px; word-wrap: break-word; white-space: normal;">
                                                <%- settingnews.response %></td>
                                            <td class="text-start" style=" justify-content: space-between;">
                                                <div
                                                    style="display: flex; align-items: center; justify-content: center;">
                                                    <a href="/details/<%= settingnews.news_id %>" class="view"
                                                        style="margin-right: 5%;"><i class="material-icons"
                                                            style="font-size: xx-large;" data-toggle="view"
                                                            title="view">&#xe8ff;</i></a>
                                                    <a href="/addnews/<%= settingnews.news_id %>" class="edit"
                                                        style="margin-right: 5%;"><i class="material-icons"
                                                            style="font-size: xx-large;" data-toggle="tooltip"
                                                            title="Edit">&#xE254;</i></a>

                                                    <button type="submit" style="background: none; border: none;">
                                                        <i class="fa-solid fa-trash fa-xl " data-toggle="Delete"
                                                            title="Delete" style="color: #d01616;"
                                                            data-tags-id="<%= settingnews.news_id %>"
                                                            onclick="deletetags(this)"></i>
                                                    </button>
                                                    <script>
                                                        function deletetags(icon) {
                                                            const tags_id = icon.getAttribute('data-tags-id');
                                                            fetch(`/setting_news/delete_news/${tags_id}`, {
                                                                method: 'POST',
                                                                headers: {
                                                                    'Content-Type': 'application/json'
                                                                },
                                                            })
                                                                .then(response => {
                                                                    alert('แท็กถูกลบแล้ว');
                                                                    window.location.reload();
                                                                    // รีโหลดหน้า
                                                                
                                                                })
                                                                .catch(error => {
                                                                    // จัดการข้อผิดพลาด
                                                                });
                                                        }
                                                    </script>

                                                </div>

                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                            <!-- jQuery -->
                            <script src='https://code.jquery.com/jquery-3.7.0.js'></script>
