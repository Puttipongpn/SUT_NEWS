<body>

    <%- include('../home/header') %>
        <%- include('../home/nav') %>
            <div class="container light-style flex-grow-1 container-p-y">

                <h4 class="font-weight-bold py-3 mb-4">
                    Wabsite settings Footer
                </h4>

                <form method="POST" action="/setting_page/update_website/<%= website[0].website_id %>">
                    <div class="card overflow-hidden">
                        <div class="row no-gutters row-bordered row-border-light">
                            <div class="col-md-3 pt-0">
                                <div class="list-group list-group-flush account-settings-links">
                                    <a class="list-group-item" href="/setting_page/setting_page_1">Setting navbar</a>
                                    <a class="list-group-item" href="/setting_page/setting_page_2"><b>Setting
                                            Footer</b></a>
                                    <a class="list-group-item" href="/setting_page/setting_page_3">Setting Topic</a>
                                    <a class="list-group-item" href="/setting_page/setting_page_4">Setting main menu</a>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="tab">
                                    <div class="tab-pane " id="setting-footer">
                                        <div class="card-body pb-2">
                                            <label class="form-label">Setting About website</label>
                                            <% console.log(website[0].website_contacts) %>
                                                <div class="form-group">
                                                    <textarea id="editor" name="website_about"></textarea>
                                                </div>

                                                <label class="form-label">Setting Contacts website</label>
                                                <div class="form-group">
                                                    <textarea id="contacts" name="website_contacts"></textarea>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-right mt-3">
                        <button type="submit" class="btn btn-primary">Save changes</button>;
                    </div>

                </form>
                <script>
                    // ในส่วนของการส่งข้อมูลไปยังเซิร์ฟเวอร์เพื่อบันทึก
                    document.querySelector('form').addEventListener('submit', function (event) {
                        event.preventDefault();

                        // ส่งแบบฟอร์มไปยัง URL และรับการตอบรับด้วย fetch API
                        fetch('/setting_page/update_website/<%= website[0].website_id %>', {
                            method: 'POST',
                            body: new FormData(this),
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    Swal.fire({
                                        title: 'Add Tags in list success!',
                                        text: 'web site update',
                                        icon: 'success'
                                    }).then(() => {
                                        window.location.reload();
                                    });
                                } else {
                                    Swal.fire({
                                        title: 'Oops!',
                                        text: 'Something went wrong!',
                                        icon: 'error'
                                    }).then(() => {
                                        window.location.reload();
                                    });
                                }
                            })
                            .catch(() => {
                                // ร้องขอไม่สำเร็จ
                                alert('เกิดข้อผิดพลาดในการร้องขอ');
                            });
                    });
                </script>
            </div>

            <div class="mt-4">
                <%- include('../home/footer') %>
            </div>
</body>

