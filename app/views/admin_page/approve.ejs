</head>

<body>
    <%- include('../home/header') %>
        <%- include('../home/nav') %>

            <div class="container">
                <div class=" row gutters">
                    <div class="col-12 col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="account-settings">
                                    <div class="d-flex justify-content-center">
                                        <b style="font-size: 18px;">News Card </b>
                                    </div>

                                    <div class="card h-100"
                                        style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); transition: 0.3s;margin-top:10px">
                                        <div class="top">

                                            <% if (approve[0].card_picture) { %>
                                                <% const imcard=approve[0].card_picture.substring(6) %>
                                                    <img class="card-img-top" src="<%= imcard %>" alt="">
                                                    <% } %>
                                        </div>
                                        <div class="card-body-commu">
                                            <div class="icon-container">
                                                <i class="bi bi-heart"></i>
                                                <i class="bi bi-chat"></i>
                                                <i class="bi bi-send" style="padding-top: 1px;"></i>
                                                <i class="bi bi-bookmark-check-fill"></i>
                                            </div>
                                            <div style="margin-top: -5px;">
                                                <p style="font-size: 13px;color:#1e1e1e;">
                                                    ถูกใจ 1,523 คน
                                                </p>
                                            </div>
                                        </div>

                                        <div class="card-body-profile">
                                            <h5 class="card-title ">
                                                <!-- title -->
                                                <b><%- approve[0].title %></b>
                                            </h5>
                                            <p class="card-text " style="font-size: 16;">
                                                <!-- welding -->
                                                <%- approve[0].welding_para %>
                                            </p>
                                        </div>
                                        <div class="card-footer" style="margin-top: 20px;">
                                            <p style="font-size: small; "><i class="bi bi-calendar2-week fa-xl"
                                                    style="color: palevioletred; padding-right:5px"></i>กำหนดการ:
                                                12 ส.ค. 66 - 19 ส.ค. 66
                                            </p>
                                            <!-- ชื่อ -->
                                            <!-- <i class="bi bi-person-circle fa-sm" style="padding-right: 5px;padding-left:10px;"></i>-->
                                            <% if (approve[0].profile_image) { %>
                                                <img id="profilePicture" class="img-account-profile rounded-circle mb-2"
                                                    style="height: 30px;" <% const
                                                    imagePath=approve[0].profile_image.substring(6); %>
                                                src="<%= imagePath %>" alt="">
                                                    <% } else { %>
                                                        <img id="profilePicture"
                                                            class="img-account-profile rounded-circle mb-2"
                                                            style="height: 30px;"
                                                            src="http://bootdey.com/img/Content/avatar/avatar1.png"
                                                            alt="">
                                                        <% } %><%-approve[0].name %>
                                                                <!-- อีเมล -->
                                                                <i class="bi bi-envelope fa-sm"
                                                                    style="padding-right: 5px;padding-left:10px;"></i></i><%-approve[0].email%>
                                                                    <!-- วันที่ประกาศ -->
                                                                    <% const date=approve[0].time_stamp %>
                                                                        <% const newDate=new Date(date); %>
                                                                            <% newDate.setHours(newDate.getHours() + 7);
                                                                                %>
                                                                                <% const formattedDate=new
                                                                                    Date(newDate).toISOString().substring(0,
                                                                                    19).replace('T', ' ' )%>
                                                                                    <p>โพสเมื่อ <%- formattedDate %>
                                                                                    </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="account-settings">
                                    <div class="user-profile">
                                        <b style="font-size: 18px;">Approver</b>
                                        <div class="user-avatar" style="padding-top: 5px;">
                                            <% console.log(profile_image) %>
                                                <% if (profile_image) { %>
                                                    <img id="profilePicture-s"
                                                        class="img-account-profile rounded-circle mb-2" <% const
                                                        imagePath=profile_image.substring(6); %>
                                                    src="<%= imagePath %>" alt="">
                                                        <% } else { %>
                                                            <img id="profilePicture-s"
                                                                class="img-account-profile rounded-circle mb-2"
                                                                src="http://bootdey.com/img/Content/avatar/avatar1.png"
                                                                alt="">
                                                            <% } %>
                                        </div>
                                        <h5 class="user-name">
                                            <%= user_name %>
                                        </h5>
                                        <h6 class="user-email"><%- email %></h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <div class="account-settings">
                                    <div class="user-profile">
                                        <b style="font-size: 18px;">Writer</b>
                                        <div class="user-avatar" style="padding-top: 5px;">
                                            <% if (approve[0].profile_image) { %>
                                                <img id="profilePicture-s"
                                                    class="img-account-profile rounded-circle mb-2" <% const
                                                    imagePath=approve[0].profile_image.substring(6); %>
                                                src="<%= imagePath %>" alt="">
                                                    <% } else { %>
                                                        <img id="profilePicture-s"
                                                            class="img-account-profile rounded-circle mb-2"
                                                            src="http://bootdey.com/img/Content/avatar/avatar1.png"
                                                            alt="">
                                                        <% } %>
                                        </div>
                                        <h5 class="user-name">
                                            <%= approve[0].user_name %>
                                        </h5>
                                        <h6 class="user-email"><%- approve[0].email %></h6>
                                        <div>
                                            <h6 style="margin-top: 10px;">About</h6>
                                            <h6 style="margin-top: -5px;"><%- approve[0].description %></h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <form method="post" action="/approve/<%= approve[0].news_id %>" 
                            enctype="multipart/form-data" class="">
                            <div class="card" style="padding-block-end: 5.5%;">
                                <div class="card-body ">
                                    <div class="row gutters">
                                        <div class="col-12">
                                            <b style="font-size: 18px;">Approve System</b>
                                        </div>
                                        <div class="col-12 ">
                                            <div class="form-group">
                                                <div>
                                                    <label for="status_id">Approve Status </label>
                                                </div>
                                                <div>
                                                    <select class="form-select-ad form-select-lg" id="status_id"
                                                        name="status_id" aria-label="Default select example">
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 ">
                                            <div class="">
                                                <div>
                                                    <label for="location_post_id">Special Location Post</label>
                                                </div>
                                                <div>
                                                    <select class="form-select-ad form-select-sm" id="location_post_id"
                                                        name="location_post_id" 
                                                        aria-label="Default select example">
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 " style="padding-top: 20px;">
                                            <div class="">
                                                <label for="title">Comments</label>
                                                <textarea id="editor" name="response"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex d-md-flex justify-content-md-end mb-3 mt-2">
                                        <div class="p-2 bd-highlight"><button type="button"
                                                class="bd-highlight ms-auto me-auto btn btn-warning ">Reset</button></div>
                                        <div class="ms-auto p-2 bd-highlight"><button type="submit"
                                                class="ms-auto me-auto btn btn-primary ">Save</button></div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <script> //ดึงข้อมูลเข้า combobox news_type
                // ในส่วนที่เรียกใช้หน้า HTML ที่มีฟอร์ม
                const dataSelect_status = document.getElementById('status_id');
                const defaultOption1 = document.createElement('option');
                defaultOption1.value = ''; // กำหนดค่าว่างให้เป็นค่าเริ่มต้น
                defaultOption1.textContent = "กรุณาเลือก";
                dataSelect_status.appendChild(defaultOption1);
                // ดึงข้อมูลจากฐานข้อมูล
                fetch('/approve/status_combobox') // เปลี่ยนเป็นเส้นทางที่เขียนรหัสหลังบ้านของคุณเพื่อดึงข้อมูล
                    .then(response => response.json())
                    .then(data => {
                        // สร้างตัวเลือกในกล่องคอมโบ
                        data.forEach(item => {
                            const option = document.createElement('option');
                            option.value = item.status_id; // แทนที่ 'id' ด้วยฟิลด์ที่ใช้เป็นค่าตัวเลือก
                            option.textContent = item.status_name; // แทนที่ 'name' ด้วยฟิลด์ที่ใช้เป็นข้อความตัวเลือก
                            dataSelect_status.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            </script>
            <script> //ดึงข้อมูลเข้า combobox location
                // ในส่วนที่เรียกใช้หน้า HTML ที่มีฟอร์ม
                const dataSelect_location = document.getElementById('location_post_id');
                const defaultOption2 = document.createElement('option');
                defaultOption2.value = ''; // กำหนดค่าว่างให้เป็นค่าเริ่มต้น
                defaultOption2.textContent = "เฉพาะข่าวที่ต้องการพื้นที่แสดงพิเศษ";
                dataSelect_location.appendChild(defaultOption2);

                // ดึงข้อมูลจากฐานข้อมูล
                fetch('/approve/location_combobox') // เปลี่ยนเป็นเส้นทางที่เขียนรหัสหลังบ้านของคุณเพื่อดึงข้อมูล
                    .then(response => response.json())
                    .then(data => {
                        // สร้างตัวเลือกในกล่องคอมโบ
                        data.forEach(item => {
                            const option = document.createElement('option');
                            option.value = item.location_post_id; // แทนที่ 'id' ด้วยฟิลด์ที่ใช้เป็นค่าตัวเลือก
                            option.textContent = item.location_name; // แทนที่ 'name' ด้วยฟิลด์ที่ใช้เป็นข้อความตัวเลือก
                            dataSelect_location.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            </script>
